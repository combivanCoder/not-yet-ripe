-----END PUBLIC KEY-----
EOF

head -c1044 tresorit_installer.run | tail -c+20 | xxd -r -p > $sigFile

tail -c+1046 tresorit_installer.run | openssl sha512 -verify $keyFile -sigopt rsa_padding_mode:pss -sigopt rsa_pss_saltlen:-1 -signature $sigFile

rm $keyFile
rm $sigFile

